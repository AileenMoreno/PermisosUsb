<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.permisosusb"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.permisosusb.SplashScreen"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            
   			<intent-filter>
                <action android:name="android.intent.action.MAIN" />
 
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- DatosAcademicos activity -->
        <activity
            android:name="com.example.permisosusb.BotonGrafo"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
                   
   			<intent-filter>
                <action android:name="android.intent.action.BOTONGRAFO" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
                
        <!-- SolicitudPermisos activity -->
        <activity
            android:name="com.example.permisosusb.SolicitudPermisos"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
                   
   			<intent-filter>
                <action android:name="android.intent.action.SOLICITUDPERMISOS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>        
             
      
        <!-- DatosAcademicos activity -->
        <activity
            android:name="com.example.permisosusb.DatosAcademicos"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
                   
   			<intent-filter>
                <action android:name="android.intent.action.DATOSACADEMICOS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- DatosPersonales activity -->
        <activity
            android:name="com.example.permisosusb.DatosPersonales"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
                   
   			<intent-filter>
                <action android:name="android.intent.action.DATOSPERSONALES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- MenuDatos activity -->
        <activity
            android:name="com.example.permisosusb.MenuDatos"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">  
   			<intent-filter>
                <action android:name="android.intent.action.MENUDATOS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        
        <!-- Main activity -->
        <activity
            android:name="com.example.permisosusb.MainActivity"
            android:label="@string/app_name" >
        </activity>
        
    </application>
</manifest>
